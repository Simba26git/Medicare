# Environment Variables Template
# Copy to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://medcare:your_password@localhost:5432/medcare_prod
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://admin:your_password@localhost:27017/medcare_ehr?authSource=admin

# Application Settings
NODE_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@medcare.africa

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking SMS (Alternative)
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key

# File Storage (AWS S3 or MinIO)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=medcare-uploads

# MinIO Configuration (Local S3 Alternative)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=medcare-uploads

# AI Services
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id
ANTHROPIC_API_KEY=your_anthropic_api_key

# Video Calling (Agora.io)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Paystack (African Payment Gateway)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Social Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Maps & Location
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Push Notifications
FCM_SERVER_KEY=your_firebase_server_key
FCM_SENDER_ID=your_firebase_sender_id

# Development Tools
LOG_LEVEL=debug
ENABLE_CORS=true
RATE_LIMIT_ENABLED=false

# Production Settings (only for production)
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/ssl/cert
# SSL_KEY_PATH=/path/to/ssl/key
# CLUSTER_MODE=true
# MAX_WORKERS=4
